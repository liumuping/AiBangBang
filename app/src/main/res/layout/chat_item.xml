<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp">

    <ImageView
        android:id="@+id/chat_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/chat_image"
        android:layout_toRightOf="@+id/chat_image"
        android:gravity="center"
        android:text="你的昵称"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/chat_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/chat_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/chat_name"
        android:layout_below="@+id/chat_name"
        android:layout_gravity="left"
        android:gravity="bottom"
        android:singleLine="true"
        android:text="内容"
        android:textSize="15sp" />

</RelativeLayout>