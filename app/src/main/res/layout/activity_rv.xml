<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlgray"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ly_rv_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/rv_im_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/back"
                android:layout_margin="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="评价详情"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/ly_rv_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhite"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rev_userimage"
                    android:layout_marginTop="5dp"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="5dp"
                    android:src="@drawable/headp1"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rev_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginLeft="20dp"
                        android:text="我是昵称"
                        android:gravity="center"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/rev_cretime"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:text="2018-03-08"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginRight="0dp"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:background="@drawable/hfp1" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/rev_endtime"
                        android:layout_width="130dp"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:text="20"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_blue">

                <TextView
                    android:id="@+id/tv_con_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingBottom="10dp"
                    android:padding="15dp"
                    android:text="内容"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_tv_rev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/tv_rev_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:text="评价内容"
                android:background="@drawable/shape_biankuang"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_edit_rev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone">
            <EditText
                android:id="@+id/edit_rev_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_gravity="left"
                android:textSize="15sp"
                android:focusedByDefault="true"
                android:hint="请输入评价"
                android:background="@drawable/shape_biankuang"/>
        </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/ly_rv_bottom"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/rv_bottom_btn"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_corner"
            android:gravity="center"
            android:text="评论"
            android:textSize="20sp"
            android:visibility="visible"/>

    </LinearLayout>
</RelativeLayout>