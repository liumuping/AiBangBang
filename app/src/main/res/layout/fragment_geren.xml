<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/geren_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boy"/>

        <TextView
            android:id="@+id/geren_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/geren_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="你的昵称"
            android:textSize="15sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_message"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="2dp"
            >

            <ImageView
                android:id="@+id/geren_image5"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/circle1" />

            <TextView
                android:id="@+id/geren_name5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="个人信息"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="40dp"
            android:background="#6e6e6e"/>


        <LinearLayout
            android:id="@+id/ly_finishhelp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/geren_image1"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/circle1" />

            <TextView
                android:id="@+id/geren_name1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="已完成帮助"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="40dp"
            android:background="#6e6e6e"/>


        <LinearLayout
            android:id="@+id/ly_review"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/geren_image2"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/circle1" />

            <TextView
                android:id="@+id/geren_name2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="评价"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="40dp"
            android:background="#6e6e6e"/>


        <LinearLayout
            android:id="@+id/ly_waithelp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/geren_image3"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/circle1" />

            <TextView
                android:id="@+id/geren_name3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="等待帮助"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginLeft="40dp"
            android:background="#6e6e6e"/>

        <LinearLayout
            android:id="@+id/ly_setting"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="2dp">

            <ImageView
                android:id="@+id/geren_image4"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/circle1" />

            <TextView
                android:id="@+id/geren_name4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="设置"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
