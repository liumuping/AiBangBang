<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlgray"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_dateshowbase_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/dateshowbase_im_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="2dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/head_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="问题详情"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>
    <!--中间显示部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ly_dateshowbase_head"
        android:background="@color/colorPrimaryWhite"
        android:orientation="vertical">
        <!--头像显示部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dateshowbase_userimage"
                android:layout_marginTop="5dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="5dp"
                android:src="@drawable/boy" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateshowbase_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="我是昵称"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/dateshowbase_cre"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:text="2018-03-08"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginRight="0dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ly_hw"
                        android:layout_width="100dp"
                        android:layout_height="25dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/hwp1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_hp"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:src="@drawable/prp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_fn"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="0dp"
                            android:background="@drawable/fnp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ly_fy"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/hfp1" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/dateshowbase_waittime"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:text="20"
                    android:textSize="15sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_blue">

            <TextView
                android:id="@+id/tv_datebase_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="内容"
                android:textSize="15sp" />
        </LinearLayout>

        <!--回答部分-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp"/>


    </LinearLayout>
    <!--底部按钮-->
    <LinearLayout
        android:id="@+id/ly_datebase_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryWhite"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:paddingTop="5dp">


        <Button
            android:id="@+id/chat_btn"
            style="@style/button_state_style"
            android:text="聊 天" />

        <Button
            android:id="@+id/offer_btn"
            style="@style/button_state_style"
            android:text="帮 助" />

        <Button
            android:id="@+id/cancel_btn"
            style="@style/button_state_style"
            android:text="取 消"
            android:visibility="visible"/>
        <Button
            android:id="@+id/ofercancel_btn"
            style="@style/button_state_style"
            android:text="取 消"/>
        <Button
            android:id="@+id/oferwtcel_btn"
            style="@style/button_state_style"
            android:text="取 消"/>

        <Button
            android:id="@+id/update_btn"
            style="@style/button_state_style"
            android:text="修 改"
            android:visibility="visible"/>

        <Button
            android:id="@+id/quesfh_btn"
            style="@style/button_state_style"
            android:text="结 束"
            android:visibility="visible"/>

        <Button
            android:id="@+id/oferfh_btn"
            style="@style/button_state_style"
            android:text="评 论"
            />


    </LinearLayout>
</RelativeLayout>