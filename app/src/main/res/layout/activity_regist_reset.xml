<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgregist"
    android:orientation="vertical"
    android:fitsSystemWindows="false">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="45dp"
        android:fitsSystemWindows="false">
        <EditText
            android:id="@+id/regist_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:hint="请输入手机号"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryWhite"
            android:textColorHint="@color/colorPrimaryWhite"
            android:textCursorDrawable="@null"
            android:textSize="16dp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/regist_cheack"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingLeft="20dp"
            android:gravity="left"
            android:hint="输入验证码"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryWhite"
            android:textColorHint="@color/colorPrimaryWhite"
            android:textCursorDrawable="@null"
            android:textSize="16sp"
            android:cursorVisible="false"
            android:inputType="none"
            android:textIsSelectable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"/>




    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="right">
    <Button
        android:id="@+id/regist_cheack_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="获取验证码"
        android:background="@drawable/shape_corner"
        />
        <Button
            android:id="@+id/regist_account_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="确认"
            android:background="@drawable/shape_corner"
            android:visibility="gone"/>
    </LinearLayout>
    </LinearLayout>