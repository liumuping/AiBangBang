<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quxiao_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="取消"
            android:textColor="@color/blak"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fqwt_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="发起问题"
            android:textColor="@color/blak"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/fabiao_text"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:background="@drawable/fabiao_drawable_selector"
            android:gravity="center_horizontal"
            android:text="发表"
            android:textSize="20sp" />
    </RelativeLayout>


    <EditText
        android:id="@+id/tv_question_data"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入内容"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:paddingTop="15dp"
        android:gravity="right"
        android:text="愿意等待时间"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="right">

        <EditText
            android:id="@+id/time_hours"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/shape_biankuang" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="小时"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/time_minutes"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:background="@drawable/shape_biankuang" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="分钟"
            android:textSize="20sp" />
    </LinearLayout>


</LinearLayout>